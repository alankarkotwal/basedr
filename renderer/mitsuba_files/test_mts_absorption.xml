<?xml version="1.0"?>
<scene version="0.4.0">
	<integrator type="ptracer">
		<integer name="maxDepth" value="-1"/>
		<integer name="rrDepth" value="1000"/>
	</integrator>	

	<sensor type="orthographic">
		<float name="nearClip" value="0.1"/>
		<float name="farClip" value="10000"/>
		<transform name="toWorld">
			<scale x="0.75" y="0.75"/>
			<lookAt origin="-2 0 0" target="0 0 0" up="0 0 1"/>
		</transform>

		<sampler type="independent">
			<integer name="sampleCount" value="256"/>
		</sampler>

		<film type="hdrfilm">
			<integer name="width" value="128"/>
			<integer name="height" value="128"/>
			<rfilter type="box"/>
            <boolean name="banner" value="false"/>
		</film>
	</sensor>

    <emitter type="collimated">
        <spectrum name="power" value="1.0"/>
   		<float name="radius" value="10"/>
        <transform name="toWorld">
			<!--<lookAt origin="-1 0.001 0.5" target="-0.5 0.001 0"/>-->
			<lookAt origin="-1 0 0" target="-0.5 0 0"/>
        </transform>
    </emitter>
    
    <medium type="homogeneous" id="med">
        <spectrum name="sigmaA" value="0.001" />
        <spectrum name="sigmaS" value="1.389" />
        <!--<phase type="isotropic"/>-->
		<phase type="hg">
			<float name="g" value="0.8"/>
		</phase>
    </medium>
	
	<shape type="obj">
		<string name="filename" value="meshes/unit_cube.obj"/>
		<ref name="interior" id="med"/>
		<boolean name="faceNormals" value="true"/>
	</shape>
</scene>
